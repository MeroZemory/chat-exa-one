{
  "name": "chat-exa-one",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:tsc": "tsc -p server.tsconfig.json --watch",
    "dev:server": "nodemon --watch dist --exec \"node dist/server.js\"",
    "predev": "rimraf dist && npm run build-server",
    "dev": "concurrently \"npm run dev:tsc\" \"npm run dev:server\"",
    "build-server": "next build && tsc -p server.tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "next lint",
    "debug": "cross-env NODE_OPTIONS='--inspect' concurrently \"npm run dev:tsc\" \"npm run dev:server\""
  },
  "dependencies": {
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20.17.19",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "nodemon": "^3.1.9",
    "postcss": "^8",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
